<%- include('layouts/header') %>


    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <%- include('layouts/sidebar') %>


                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <%- include('layouts/topnav') %>


                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Page Heading -->
                                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                    <h1 class="h3 mb-0 text-gray-800">Users Data Update</h1>
                                    <%= message %>
                                </div>
                                <!-- Content Row -->
                                <div class="row">

                                    <!-- Listing Code -->
                                    <!-- Content Wrapper -->
                                    <div id="content-wrapper" class="d-flex flex-column">

                                        <!-- Main Content -->
                                        <div id="content">

                                          

                                            <!-- Editing Code -->

                                            <!-- Outer Row -->
                                            <div class="row justify-content-center">

                                                <div class="col-xl-10 col-lg-12 col-md-9">

                                                    <div class="card o-hidden border-0 shadow-lg my-5">
                                                        <div class="card-body p-0">
                                                            <!-- Nested Row within Card Body -->
                                                            <div class="row">
                                                                <div class="col-lg-6 d-none d-lg-block ">
                                                                </div>
                                                                <div class="col-lg-10">
                                                                    <div class="p-5">
                                                                        <div class="text-center">
                                                                            <%= message %>
                                                                                <h1 class="h4 text-gray-900 mb-4">Hello
                                                                                    User!</h1>
                                                                        </div>
                                                                        <form action="/admin/userUpdate" method="post"
                                                                            class="user" enctype="multipart/form-data">
                                                                            <div class="form-group">
                                                                                <input type="text"
                                                                                    class="form-control form-control-user"
                                                                                    name="firstName" id="firstName" value="<%= response.firstName %>"
                                                                                    aria-describedby="nameHelp"
                                                                                    placeholder="Enter First Name...">
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <input type="text"
                                                                                    class="form-control form-control-user"
                                                                                    name="lastName" id="lastName" value="<%= response.lastName %>"
                                                                                    aria-describedby="nameHelp"
                                                                                    placeholder="Enter Last Name...">
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label for="role">Select Role:</label>
                                                                                <select name="role" id="role" >
                                                                                    <option value="Admin" <%= response.role === 'Admin' ? 'selected' : '' %>>Admin</option>
                                                                                    <option value="User" selected <%= response.role === 'User' ? 'selected' : '' %>>User
                                                                                    </option>
                                                                                </select>
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <input type="email"
                                                                                    class="form-control form-control-user"
                                                                                    name="email" id="email" value="<%= response.email %>"
                                                                                    aria-describedby="emailHelp"
                                                                                    placeholder="Enter Email Address...">
                                                                            </div>
                                                                            <div class="form-group">
                                                                                <label for="myfile">Enter Profile
                                                                                    Image...</label>
                                                                                <input type="file" class="form-control"
                                                                                    name="image" id="image"
                                                                                >
                                                                            </div>
                                                                            
                                                                            <input type="hidden" name="id" value="<%= response._id%>"/> 
                                                                            <button type="submit" class="btn btn-primary btn-lg btn-block"> Update</button>
                                                                            <hr>
                                                                        </form>

                                                                        <!-- Editing Code Ends -->
                                                                    </div>
                                                                    <!-- /.container-fluid -->

                                                                </div>
                                                                <!-- End of Main Content -->

                                                            </div>
                                                            <!-- End of Content Wrapper -->

                                                        </div>
                                                        <!-- End of Page Wrapper -->

                                                        <!-- Scroll to Top Button-->
                                                        <a class="scroll-to-top rounded" href="#page-top">
                                                            <i class="fas fa-angle-up"></i>
                                                        </a>



                                                        <!-- Listing Code Ends -->


                                                        <%- include('layouts/siteFooter') %>
                                                    </div>
                                                    <!-- End of Content Wrapper -->

                                                </div>
                                                <!-- End of Page Wrapper -->

                                                <!-- Scroll to Top Button-->
                                                <a class="scroll-to-top rounded" href="#page-top">
                                                    <i class="fas fa-angle-up"></i>
                                                </a>
                                            </div>

    </body>

    <%- include('layouts/footer') %>